# Core
BT_APP_NAME=bt-service
BT_APP_ENV=dev
# AUTO => dev=DEBUG, test=INFO, staging=INFO, prod=WARNING
BT_LOG_LEVEL=AUTO
# Empty means env-based default (dev/test=false, staging/prod=true)
# BT_LOG_JSON=
BT_LOG_UVICORN_ACCESS=true
BT_API_HOST=0.0.0.0
BT_API_PORT=8000
BT_API_RELOAD=true
BT_API_PREFIX=/api/v1

# Path (optional)
# BT_PROJECT_ROOT=/absolute/path/to/bt-service
BT_TOOL_BIN_DIR=tools/bin
BT_TOOL_DEFAULT_TIMEOUT_SECONDS=60
BT_TOOL_STRIP_ANSI_OUTPUT=true
BT_TOOL_FORCE_NO_COLOR_ENV=true
BT_TOOL_HCI_FILTER_EXECUTABLE=publish/BluetoothKit.Console
BT_TOOL_HCI_FILTER_WORKING_DIR=tools/bin

# Proxy (optional)
# BT_PROXY_HTTP=http://proxy.company.local:8080
# BT_PROXY_HTTPS=http://proxy.company.local:8080
# BT_PROXY_NO_PROXY=localhost,127.0.0.1
BT_PROXY_APPLY_TO_PROCESS=true

# Jira (required for Jira API)
# Example: https://your-domain.atlassian.net
# Global fallback values
BT_JIRA_BASE_URL=
BT_JIRA_USER_EMAIL=
BT_JIRA_API_TOKEN=
# Env-specific overrides (used first when BT_APP_ENV matches)
# BT_JIRA_BASE_URL_DEV=
# BT_JIRA_BASE_URL_STAGING=
# BT_JIRA_BASE_URL_PROD=
# BT_JIRA_USER_EMAIL_DEV=
# BT_JIRA_USER_EMAIL_STAGING=
# BT_JIRA_USER_EMAIL_PROD=
# BT_JIRA_API_TOKEN_DEV=
# BT_JIRA_API_TOKEN_STAGING=
# BT_JIRA_API_TOKEN_PROD=
BT_JIRA_TIMEOUT_SECONDS=15
BT_JIRA_VERIFY_SSL=true
